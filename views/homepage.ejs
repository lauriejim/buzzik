<div class="container" role="main">

  <div class="jumbotron">

    <!-- Action button  -->
    <div class="row">

      <div class="col-md-4 col-md-offset-1 col-sm-4 col-sm-offset-1 col-xs-4 col-xs-offset-1">
        <button class="btn bn-lg btn-primary btn-block" data-toggle="modal" data-target=".create-game"><%= __('Create') %></button>
      </div>

      <div class="col-md-4 col-md-offset-2 col-sm-4 col-sm-offset-2 col-xs-4 col-xs-offset-2">
        <button class="btn bn-lg btn-primary btn-block" data-toggle="modal" data-target=".join-game"><%= __('Join') %></button>
      </div>

    </div>
    <!-- END Action button  -->

    <!-- Create modal -->
    <div class="modal fade create-game" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="container">
          <div class="row">
            <div class="col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3">

              <div class="account-wall">
                <form class="modal-form" method="POST" action="/game/new">
                  <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only"><%= __('Close') %></span></button>
                  <h3 class="modal-title"><%= __('Create party') %></h3>
                  <input type="text" class="form-control" name="game_name" placeholder="<%= __('Party name') %>" required>
                  <span class="label label-primary"><%= __('Number of tracks') %></span>
                  <div class="range">
                    <input type="range" name="game_tracks" min="1" max="20" value="10" onchange="setTracks(this)">
                    <output id="range">20</output>
                  </div>
                  <button class="btn btn-lg btn-primary btn-block form-control" type="submit"><%= __('Play') %></button>
                </form>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- END Create modal -->

    <!-- Join modal -->
    <div class="modal fade join-game" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="container">
          <div class="row">
            <div class="col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3">

              <div class="account-wall">
                <form class="modal-form" method="POST" action="/game/join">
                  <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only"><%= __('Close') %></span></button>
                  <h3 class="modal-title"><%= __('Join party') %></h3>
                  <input type="text" class="form-control" name="game_username" placeholder="<%= __('Pseudo') %>" required>
                  <span class="label label-primary"><%= __('Private party key') %></span>
                  <input type="text" class="form-control modal-label" name="game_key" placeholder="<%= __('Key') %>" required>
                  <button class="btn btn-lg btn-primary btn-block form-control" type="submit"><%= __('Play') %></button>
                </form>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- END Join modal -->

  </div>

</div>

<script>
  var setTracks = function(el) {
    $('#range').val(el.value);
  };
</script>